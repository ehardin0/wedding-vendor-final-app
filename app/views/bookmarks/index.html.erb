<div>
  <div>
    <h1>
      <%= @current_user.first_name %>'s Favorite Vendors
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Save a vendor
    </h2>

    <form action="/insert_bookmark" method="post">

      <div>
        <label for="vendor_id_box">
          Vendor
        </label>

        <select name="query_vendor_id">
          <% Vendor.all.order(:name).each do |a_vendor| %>
            <option value="<%= a_vendor.id %>">
              <%= a_vendor.name %>
            </option>
          <% end %>
        </select>
      </div>

      <button class="btn btn-outline-success">
        Save to Favorites
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Vendor
        </th>

        <th>
          Category
        </th>

        <th>
          Vendor's Page
        </th>

        <th>
        </th>
        
      </tr>

      <% @list_of_bookmarks.each do |a_bookmark| %>
      <tr>

        <td>
          <%= a_bookmark.vendor.name %>
        </td>

        <td>
          <%= a_bookmark.vendor.category %> 
        </td>

        <td>
          <a href="/vendors/<%= a_bookmark.vendor.id %> type="button" class="btn btn-outline-primary">
            Show details
          </a>
        </td>


        <td>
          <a href="/delete_bookmark/<%= a_bookmark.id %>" type="button" class="btn btn-outline-secondary">
            Remove from Favorites
          </a>
        </td> 
      </tr>
      <% end %>

    </table>
  </div>
</div>

<hr>
