<h1>Sign up</h1>

<form action="/insert_user" method="post">

  <div class="row mb-3">
    <label for="email_box" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
    <input id="email_box" name="query_email" type="text" class="form-control">
    </div>
  </div>
                 
  <div class="row mb-3">
    <label for="first_name" class="col-sm-2 col-form-label">First Name</label>
      <div class="col-sm-10">
    <input type="text" id="first_name" name="first_name" class="form-control"></div>
  </div>

  <div class="row mb-3">
    <label for="last_name" class="col-sm-2 col-form-label">Last Name</label>
    <div class="col-sm-10">  
    <input type="text" id="last_name" name="last_name" class="form-control"></div>
  </div>
    
  <div class="row mb-3">
    <label for="password_box" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
    <input id="password_box" name="query_password" placeholder="Choose a password..." type="password" class="form-control"></div>
  </div>

  <div class="row mb-3">
    <label for="password_confirmation_box" class="col-sm-2 col-form-label">Password Confirmation</label>
      <div class="col-sm-10">
    <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password" class="form-control"></div>
  </div>

  <button class="btn btn-outline-dark">
    Sign up
  </button>
</form>


<hr>

<p>
  Or, <a href="/user_sign_in">Sign in</a> instead.
</p>

