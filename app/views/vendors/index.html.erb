<div>
  <div>
    <h1>
      List of all vendors
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new vendor
    </h2>

    <form action="/insert_vendor" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="category_box">
          Category
        </label>

        <input type="text" id="category_box" name="query_category">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description" rows="3"></textarea>
      </div>

      <div>
        <label for="website_box">
          Website
        </label>

        <input type="text" id="website_box" name="query_website">
      </div>

      <div>
        <label for="geography_box">
          Geography
        </label>

        <input type="text" id="geography_box" name="query_geography">
      </div>

      <div>
        <label for="comments_count_box">
          Comments count
        </label>

        <input type="text" id="comments_count_box" name="query_comments_count">
      </div>

      <button>
        Create vendor
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Category
        </th>

        <th>
          Description
        </th>

        <th>
          Website
        </th>

        <th>
          Geography
        </th>

        <th>
          Comments count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_vendors.each do |a_vendor| %>
      <tr>
        <td>
          <%= a_vendor.id %>
        </td>

        <td>
          <%= a_vendor.name %>
        </td>

        <td>
          <%= a_vendor.category %>
        </td>

        <td>
          <%= a_vendor.description %>
        </td>

        <td>
          <%= a_vendor.website %>
        </td>

        <td>
          <%= a_vendor.geography %>
        </td>

        <td>
          <%= a_vendor.comments_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_vendor.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_vendor.updated_at) %> ago
        </td>

        <td>
          <a href="/vendors/<%= a_vendor.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
